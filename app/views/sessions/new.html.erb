<h1 id="page-heading">Log in</h1>

<div id="login-form">
<%= form_tag sessions_path do %>
    <p id="email-field">
        <%= label_tag :username %>:
        <%= text_field_tag :name, params[:name] %>
    </p>
    <p id="password-field">
        <%= label_tag :password %>:
        <%= password_field_tag :password %>
    </p>
    <p class="button"><%= submit_tag "Log in" %></p>
<% end %>
</div>
